<ul class="menu">
  {% for item in menu.get_items %}
    <li class="menu-item {{item.classes | join(' ')}}"><a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a>
      {% if item.get_children %}
        <ul class="sub-menu">
          {% for child in item.get_children %}
            <li class="menu-item {{child.classes | join(' ')}}"><a href="{{child.get_link}}">{{child.title}}</a></li>
          {% endfor %}
        </ul>
       {% endif %}
    </li>
  {% endfor %}
</ul>